{
  "name": "@charlesmack34/react-comments-section",
  "version": "1.2.1",
  "description": "React component library for a functioning comments section",
  "author": "Charles Mack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlesmack34/react-comments-section.git"
  },
  "main": "dist/index.js",
  "style": "dist/styles.css",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "sideEffects": false,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl-postcss8 --css-modules false --no-compress --format modern,cjs && cp -r src/assets dist/",
    "start": "microbundle-crl-postcss8 --css-modules false watch --no-compress --format modern,cjs && cp -r src/assets dist/",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/draftjs-to-html": "^0.8.2",
    "@types/html-to-draftjs": "^1.4.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/react-draft-wysiwyg": "^1.13.4",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-standard": "^4.1.0",
    "gh-pages": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^2.1.3",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@szhsin/react-menu": "^4.0.3",
    "@types/lodash": "^4.14.199",
    "@types/uuid": "^9.0.4",
    "@yfwz100/rollup-plugin-smart-asset": "^2.1.3",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "emoji-picker-react": "^4.5.2",
    "fsevents": "^2.3.3",
    "html-to-draftjs": "^1.5.0",
    "microbundle-crl-postcss8": "^0.13.11",
    "react-draft-wysiwyg": "^1.15.0",
    "react-responsive-modal": "^6.4.2",
    "sass": "^1.68.0"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/charlesmack34/react-comments-section/issues"
  },
  "homepage": "https://github.com/charlesmack34/react-comments-section#readme",
  "directories": {
    "example": "example"
  },
  "overrides": {
    "microbundle-crl-postcss8": {
      "nth-check": "2.0.1"
    }
  }
}
